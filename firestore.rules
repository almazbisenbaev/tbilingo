// Firestore Security Rules for Tbilingo
// These rules allow read access to course content and authenticated write access to user progress

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Course content - readable by all, writable only by admins
    // Course definitions and learning content should be read-only for regular users
    match /courses/{courseId} {
      allow read: if true; // Anyone can read course definitions
      allow write: if false; // Only server-side operations should modify courses
      
      // Course items are readable by all, not writable by users
      match /items/{itemId} {
        allow read: if true; // Anyone can read course items
        allow write: if false; // Only server-side operations should modify course items
      }
    }
    
    // User-specific data - only accessible by the user themselves
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // User progress data - simple structure
      match /progress/{courseId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // User profile and stats
      match /profile/{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Global stats (optional - for leaderboards, etc.)
    match /global-stats/{document=**} {
      allow read: if true; // Anyone can read global stats
      allow write: if false; // Only server-side functions should write global stats
    }
  }
}