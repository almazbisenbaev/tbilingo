// Firestore Security Rules for Tbilingo
// These rules allow read access to course content and authenticated write access to user progress

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Course content - readable by all, admin-only write access
    match /courses/{courseId} {
      allow read: if true;
      allow write: if isAdmin();
      
      match /items/{itemId} {
        allow read: if true;
        allow write: if isAdmin();
      }
    }
    
    // User-specific data
    match /users/{userId} {
      // Allow admins to read user data (useful for debugging/support)
      allow read: if (request.auth != null && request.auth.uid == userId) || isAdmin();
      allow write: if (request.auth != null && request.auth.uid == userId) || isAdmin();
      
      match /progress/{courseId} {
        allow read, write: if (request.auth != null && request.auth.uid == userId) || isAdmin();
      }
      
      match /profile/{document=**} {
        allow read, write: if (request.auth != null && request.auth.uid == userId) || isAdmin();
      }
    }
    
    // App notification subscribers
    match /app_notify_subscribers/{docId} {
      allow create: if true;
      allow read, update, delete: if isAdmin(); 
    }
    
    // Global stats
    match /global-stats/{document=**} {
      allow read: if true;
      allow write: if isAdmin(); 
    }
  }
}
