// Firestore Security Rules for Tbilingo
// These rules allow read access to course content and authenticated write access to user progress

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Course content - readable by all, writable by authenticated users (temporary for migration)
    // Course definitions and learning content should be read-only for regular users
    match /courses/{courseId} {
      allow read: if true; // Anyone can read course definitions
      allow write: if request.auth != null; // Temporarily allow authenticated users to write
      
      // Course items are readable by all, writable by authenticated users (temporary for migration)
      match /items/{itemId} {
        allow read: if true; // Anyone can read course items
        allow write: if request.auth != null; // Temporarily allow authenticated users to write
      }
    }
    
    // User-specific data - only accessible by the user themselves
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // User progress data - simple structure
      match /progress/{courseId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // User profile and stats
      match /profile/{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // App notification subscribers - public write for email signups
    match /app_notify_subscribers/{docId} {
      allow create: if true; // Anyone can sign up for notifications
      allow read, update, delete: if false; // Only admin/server can read or modify
    }
    
    // Global stats (optional - for leaderboards, etc.)
    match /global-stats/{document=**} {
      allow read: if true; // Anyone can read global stats
      allow write: if false; // Only server-side functions should write global stats
    }
  }
}